        <ImageView
            android:id="@+id/iv_farming_sched_light"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/iv_farming_sched_gold"
            app:layout_constraintTop_toBottomOf="@+id/tv_farming_sched_wedsat"
            app:srcCompat="@drawable/item_guide_to_light" />

        <ImageView
            android:id="@+id/iv_farming_sched_chains"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/iv_farming_sched_light"
            app:layout_constraintTop_toBottomOf="@+id/tv_farming_sched_wedsat"
            app:srcCompat="@drawable/item_fetters_of_the_dandelion_gladiator" />

        <ImageView
            android:id="@+id/iv_farming_sched_aero"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/iv_farming_sched_chains"
            app:layout_constraintTop_toBottomOf="@+id/tv_farming_sched_wedsat"
            app:srcCompat="@drawable/item_grain_of_aerosiderite" />

        <ImageView
            android:id="@+id/iv_farming_sched_mask"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/iv_farming_sched_aero"
            app:layout_constraintTop_toBottomOf="@+id/tv_farming_sched_wedsat"
            app:srcCompat="@drawable/item_mask_of_the_wicked_lieutenant" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/sunConstraintLayout"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/build_round_card"
        android:backgroundTint="#99F9F3E5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wedsatConstraintLayout">

        <TextView
            android:id="@+id/tv_farming_sched_sun"
