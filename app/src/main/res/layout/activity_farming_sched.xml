            android:layout_height="60dp"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/iv_farming_sched_diligence2"
            app:layout_constraintTop_toBottomOf="@+id/iv_farming_sched_transience2"
            app:srcCompat="@drawable/item_philosophies_of_elegance" />

        <ImageView
            android:id="@+id/iv_farming_sched_boreal2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/iv_farming_sched_elegance2"
            app:layout_constraintTop_toBottomOf="@+id/iv_farming_sched_decarabian2"
            app:srcCompat="@drawable/item_boreal_wolf_s_nostalgia" />

        <ImageView
            android:id="@+id/iv_farming_sched_mist2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/iv_farming_sched_boreal2"
            app:layout_constraintTop_toBottomOf="@+id/iv_farming_sched_guyun2"
            app:srcCompat="@drawable/item_mist_veiled_primo_elixir" />

        <ImageView
            android:id="@+id/iv_farming_sched_narukami2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/iv_farming_sched_mist2"
            app:layout_constraintTop_toBottomOf="@+id/iv_farming_sched_branch2"
            app:srcCompat="@drawable/item_narukami_s_valor" />

        <ImageView
            android:id="@+id/iv_farming_sched_ballad2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_farming_sched_resistance2"
            app:srcCompat="@drawable/item_philosophies_of_ballad" />

        <ImageView
            android:id="@+id/iv_farming_sched_gold2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/iv_farming_sched_ballad2"
            app:layout_constraintTop_toBottomOf="@+id/iv_farming_sched_diligence2"
            app:srcCompat="@drawable/item_philosophies_of_gold" />

        <ImageView
            android:id="@+id/iv_farming_sched_light2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/iv_farming_sched_gold2"
            app:layout_constraintTop_toBottomOf="@+id/iv_farming_sched_elegance2"
