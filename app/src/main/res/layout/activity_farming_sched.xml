        <ImageView
            android:id="@+id/iv_farming_sched_transience2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/iv_farming_sched_prosperity2"
            app:layout_constraintTop_toBottomOf="@+id/tv_farming_sched_sun"
            app:srcCompat="@drawable/item_philosophies_of_transience" />

        <ImageView
            android:id="@+id/iv_farming_sched_decarabian2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/iv_farming_sched_transience2"
            app:layout_constraintTop_toBottomOf="@+id/tv_farming_sched_sun"
            app:srcCompat="@drawable/item_scattered_piece_of_decarabian_s_dream" />

        <ImageView
            android:id="@+id/iv_farming_sched_guyun2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/iv_farming_sched_decarabian2"
            app:layout_constraintTop_toBottomOf="@+id/tv_farming_sched_sun"
            app:srcCompat="@drawable/item_divine_body_from_guyun" />

        <ImageView
            android:id="@+id/iv_farming_sched_branch2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/iv_farming_sched_guyun2"
            app:layout_constraintTop_toBottomOf="@+id/tv_farming_sched_sun"
            app:srcCompat="@drawable/item_golden_branch_of_a_distant_sea" />

        <ImageView
            android:id="@+id/iv_farming_sched_resistance2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_farming_sched_freedom2"
            app:srcCompat="@drawable/item_philosophies_of_resistance" />

        <ImageView
            android:id="@+id/iv_farming_sched_diligence2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/iv_farming_sched_resistance2"
            app:layout_constraintTop_toBottomOf="@+id/iv_farming_sched_prosperity2"
