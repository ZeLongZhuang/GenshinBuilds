<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper_farm">

    <TextView
        android:id="@+id/tv_farming_sched_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:shadowColor="@color/gray"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="3"
        android:text="@string/farming_sched"
        android:textColor="@color/yellow_light"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.066"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/monwedConstraintLayout"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/build_round_card"
        android:backgroundTint="#99F9F3E5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_farming_sched_title">

        <TextView
            android:id="@+id/tv_farming_sched_monthurs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="@string/mon_thurs"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_farming_sched_freedom"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:adjustViewBounds="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_farming_sched_monthurs"
            app:srcCompat="@drawable/item_guide_to_freedom" />

        <ImageView
            android:id="@+id/iv_farming_sched_prosperity"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="4dp"
            android:adjustViewBounds="true"
            app:layout_constraintStart_toEndOf="@+id/iv_farming_sched_freedom"
            app:layout_constraintTop_toBottomOf="@+id/tv_farming_sched_monthurs"
            app:srcCompat="@drawable/item_guide_to_prosperity" />

        <ImageView
            android:id="@+id/iv_farming_sched_transience"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="4dp"
            android:adjustViewBounds="true"
            app:layout_constraintStart_toEndOf="@+id/iv_farming_sched_prosperity"
            app:layout_constraintTop_toBottomOf="@+id/tv_farming_sched_monthurs"
            app:srcCompat="@drawable/item_guide_to_transience" />

        <ImageView
            android:id="@+id/iv_farming_sched_decarabian"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="4dp"
            android:adjustViewBounds="true"
            app:layout_constraintStart_toEndOf="@+id/iv_farming_sched_transience"
            app:layout_constraintTop_toBottomOf="@+id/tv_farming_sched_monthurs"
            app:srcCompat="@drawable/item_tile_of_decarabian_s_tower" />

        <ImageView
            android:id="@+id/iv_farming_sched_guyun"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="4dp"
            android:adjustViewBounds="true"
            app:layout_constraintStart_toEndOf="@+id/iv_farming_sched_decarabian"
            app:layout_constraintTop_toBottomOf="@+id/tv_farming_sched_monthurs"
            app:srcCompat="@drawable/item_luminous_sands_from_guyun" />

        <ImageView
            android:id="@+id/iv_farming_sched_branch"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="4dp"
            android:adjustViewBounds="true"
            app:layout_constraintStart_toEndOf="@+id/iv_farming_sched_guyun"
            app:layout_constraintTop_toBottomOf="@+id/tv_farming_sched_monthurs"
            app:srcCompat="@drawable/item_coral_branch_of_a_distant_sea" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tuesfriConstraintLayout"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/build_round_card"
        android:backgroundTint="#99F9F3E5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/monwedConstraintLayout">

        <TextView
            android:id="@+id/tv_farming_sched_tuesfri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="@string/tues_fri"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_farming_sched_resistance"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:adjustViewBounds="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_farming_sched_tuesfri"
            app:srcCompat="@drawable/item_guide_to_resistance" />

        <ImageView
            android:id="@+id/iv_farming_sched_diligence"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="4dp"
            android:adjustViewBounds="true"
            app:layout_constraintStart_toEndOf="@+id/iv_farming_sched_resistance"
            app:layout_constraintTop_toBottomOf="@+id/tv_farming_sched_tuesfri"
            app:srcCompat="@drawable/item_guide_to_diligence" />

        <ImageView
            android:id="@+id/iv_farming_sched_elegance"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="4dp"
            android:adjustViewBounds="true"
            app:layout_constraintStart_toEndOf="@+id/iv_farming_sched_diligence"
            app:layout_constraintTop_toBottomOf="@+id/tv_farming_sched_tuesfri"
            app:srcCompat="@drawable/item_guide_to_elegance" />

        <ImageView
            android:id="@+id/iv_farming_sched_boreal"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/iv_farming_sched_elegance"
            app:layout_constraintTop_toBottomOf="@+id/tv_farming_sched_tuesfri"
            app:srcCompat="@drawable/item_boreal_wolf_s_milk_tooth" />

        <ImageView
            android:id="@+id/iv_farming_sched_mist"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/iv_farming_sched_boreal"
            app:layout_constraintTop_toBottomOf="@+id/tv_farming_sched_tuesfri"
            app:srcCompat="@drawable/item_mist_veiled_lead_elixir" />

        <ImageView
            android:id="@+id/iv_farming_sched_narukami"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="4dp"
            android:adjustViewBounds="true"
            app:layout_constraintStart_toEndOf="@+id/iv_farming_sched_mist"
            app:layout_constraintTop_toBottomOf="@+id/tv_farming_sched_tuesfri"
            app:srcCompat="@drawable/item_narukami_27s_wisdom" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/wedsatConstraintLayout"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/build_round_card"
        android:backgroundTint="#99F9F3E5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tuesfriConstraintLayout">

        <TextView
            android:id="@+id/tv_farming_sched_wedsat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="@string/wed_sat"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_farming_sched_ballad"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_farming_sched_wedsat"
            app:srcCompat="@drawable/item_guide_to_ballad" />

        <ImageView
            android:id="@+id/iv_farming_sched_gold"
            android:layout_width="60dp"
            android:layout_height="60dp"
